    {% extends 'common/app.html.twig' %}
    {% block header%}
    <h1>Product</h1>
    {% endblock %}
    {% block content%}
    <table class="record_properties">
        <tbody>            <tr>
                <th>Id</th>                    <td>
                        {{ entity.id }}
                    </td>            </tr>            <tr>
                <th>Code</th>                    <td>
                        {{ entity.code }}
                    </td>            </tr>            <tr>
                <th>Title</th>                    <td>
                        {{ entity.title }}
                    </td>            </tr>            <tr>
                <th>Description</th>                    <td>
                        {{ entity.description }}
                    </td>            </tr>        </tbody>
    </table>
        <div class="record-actions">
    <a class="button" href="{{ path('product') }}">
        Back to the list
    </a>
            <a class="button" href="{{ path('product_edit',
{ 'id': entity.id }) }}">
            Edit
        </a>
                <div style="float:left">
            {{ form(delete_form) }}
        </div>
        <div style="clear:both"></div>
    </div>    {% endblock %}
